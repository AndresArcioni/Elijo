<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head') %> 
<link rel="stylesheet" href="/css/partials/meet.css">
<body>
    <%- include('./partials/header') %>
    
    
    <div class="container">
        
        <div class="wrapper-title">
            <div class="main-title">
                <img src="/images/users/<%=user.photo%>" alt="">
                <h2 class="profile-detail-title"><%= user.name + ' ' + user.last_name %></h2>
            </div>
               
            <% if(typeof userLoggedIn != 'undefined') { %>
                <a href="" class="d-flex"><p class="conditional-whatsapp"><i class="fab fa-whatsapp"> <%= user.telephone %></i></p></a> 
            <% }else{ %>
                <a href="/user/login">Ingresa para contactarte</a>
            <% } %>
            
        </div>
            
        <div class="row">
            <article class="wrapper-detail-profile col-12 col-md-8">
                    
                <section class="profile-experiences">
                    <h4 class="uni">Universidad</h4>
                    <% for(let i = 0 ; i < university_career.length ; i++){ %> 
                        <h5><%= university_career[i].name %></h5>
                        <% for(let j = 0 ; j < university_career[i].Careers.length ; j++){ %> 
                            <h6 class="ml-1"><i class="fas fa-book-open pr-2"></i><%= university_career[i].Careers[j].name%></h6>
                        <% } %>
                    <% } %>
                    <h4 class="course">Cursos</h4>
                    <% for(let i = 0 ; i < institute_courses.length ; i++){ %> 
                        <h5><%=institute_courses[i].name%></h5>
                        
                        <% for(let j = 0 ; j < institute_courses[i].Courses.length; j++){ %> 
                            
                            <h6 class="ml-1"><i class="fas fa-book-open pr-2"></i><%=institute_courses[i].Courses[j].name%></h6>
                        <% } %>

                    <% } %>
                </section>
                <section class="profile-interests">
                    <h4 class="interests-title">Intereses</h4>
                    <ul class="interests d-flex">
                        <% for(let i = 0; i < user.Interest.length; i++){ %>
                            <li><%= user.Interest[i].interest_name %></li>
                        <% } %>
                    </ul>
                </section>
                <section class="profile-interests">
                    <h4 class="experiences-title">Experiencias</h4>
                    <h6><%= user.experiences %></h6>                    
                </section>
            </article>
                
                <aside class="conditional-question-and-tips col-12 col-md-4">
                    <h4 class="tips-title">Tips</h4>
                    <% for(let i = 0; i < user.User_tips.length; i++){ %>
                        <p><i class="far fa-check-circle"></i> <%= user.User_tips[i].tip %></p>    
                    <% } %>
                </aside>
        </div>     
            
    </div> 
        
        
        <%- include('./partials/scripts') %>
        <%- include('./partials/footer') %>
    </body>
    </html>        