<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head') %>
<body>
    <%- include('./partials/header') %>
    <!-- Default form login -->
    <form class="text-center justify-content-center border border-light p-5" action="#!">
        
        <p class="h4 mb-4">Ingresar</p>
        
        <div id="btn-max-width">
        <!-- Email -->
        <input type="email" id="defaultLoginFormEmail" class="form-control mb-4" placeholder="E-mail" id="btn-max-width">
        
        <!-- Password -->
        <input type="password" id="defaultLoginFormPassword" class="form-control mb-4" placeholder="Contraseña" id="btn-max-width">
        </div>

        <div class="d-flex justify-content-around" id="btn-max-width">
            <div>
                <!-- Remember me -->
                <div class="custom-control custom-checkbox">
                    <input type="checkbox" class="custom-control-input" id="defaultLoginFormRemember">
                    <label class="custom-control-label" for="defaultLoginFormRemember">Recordarme</label>
                </div>
            </div>
            <div>
                <!-- Forgot password -->
                <a href="">Olvidaste tu contraseña?</a>
            </div>
        </div>
        
        <div id="btn-max-width">
        <!-- Sign in button -->
        <button class="btn btn-info btn-block my-4 btn-log-reg" type="submit" id="btn-max-width">Ingresar</button>
        </div>

        <!-- Register -->
        <p>Not a member?
            <a href="">Register</a>
        </p>
        
        <!-- Social login -->
        <p>or sign in with:</p>
        
        <a href="#" class="mx-2" role="button"><i class="fab fa-google light-blue-text"></i></a>
        
    </form>
    <!-- Default form login -->
    <%- include('./partials/scripts.ejs') %>  
</body>
</html>